# Copy this file to .env for local development
# cp .env.example .env

# Required: your secret API token (use any random string for local dev)
API_TOKEN=changeme-use-a-random-string

# Optional: where to store the SQLite database
# Default for Docker/Railway/Render/Fly: /data/analytics.db
# Default for local dev: set this to a writable path
DB_PATH=/tmp/analytics.db

# Optional: your public instance URL (used in /mcp page config blocks)
# Leave empty to auto-detect from the incoming request
BASE_URL=http://localhost:8000

# The port gunicorn/Flask listens on
PORT=8000
